<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AdministrasiKaligentong" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_saturated</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/blue_saturated_1</item>
    </style>

    <style name="Theme.AdministrasiKaligentong.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AdministrasiKaligentong.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AdministrasiKaligentong.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="Theme.AdministrasiKaligentong.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">@color/til_activation_indicator</item>
        <item name="hintTextColor">?attr/colorPrimaryVariant</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
    </style>

    <style name="Theme.AdministrasiKaligentong.CollapsingToolbar" parent="Widget.Design.CollapsingToolbar">
        <item name="statusBarScrim">@color/white</item>
        <item name="contentScrim">@color/white</item>
    </style>
</resources>